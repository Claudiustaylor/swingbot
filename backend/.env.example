# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Pionex API Configuration
PIONEX_API_KEY=your_pionex_api_key_here
PIONEX_SECRET_KEY=your_pionex_secret_key_here
PIONEX_BASE_URL=https://api.pionex.com
PIONEX_WS_URL=wss://ws.pionex.com

# Database Configuration
DATABASE_PATH=./data/trades.db
DATABASE_URL=sqlite:./data/trades.db

# Trading Configuration
DEFAULT_TRADE_AMOUNT=100
MAX_OPEN_POSITIONS=5
RISK_PERCENTAGE=2
STOP_LOSS_PERCENTAGE=5

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/trading.log

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

